<catel:UserControl x:Class="Orc.Controls.LogViewerControl"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:catel="http://catel.codeplex.com"
                   xmlns:controls="clr-namespace:Orc.Controls.Controls"
                   mc:Ignorable="d" x:Name="CurrentControl" d:DesignHeight="22" d:DesignWidth="120">

    <UserControl.Resources>
        <Style TargetType="{x:Type controls:RichTextBoxParagraph}">
            <Setter Property="Margin" Value="0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <RichTextBox x:Name="textBox" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" />
    </Grid>
</catel:UserControl>
