    <!-- TabControl -->
    <Style x:Key="DefaultTabControlStyle" TargetType="{x:Type orccontrols:TabControl}" BasedOn="{StaticResource {x:Type orccontrols:TabControl}}">
        <Setter Property="Margin" Value="{DynamicResource Margin.Default}" />
    </Style>

</ResourceDictionary>