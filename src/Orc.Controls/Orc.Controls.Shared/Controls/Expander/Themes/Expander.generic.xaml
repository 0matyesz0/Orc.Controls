    <SolidColorBrush x:Key="Brush_Control_1" Color="{StaticResource Color_Control_1}"/>
    <Color x:Key="Color_Control_2">#cccccc</Color>
    <SolidColorBrush x:Key="Brush_Control_2" Color="{StaticResource Color_Control_2}"/>
    <Color x:Key="Color_Font_2">#303030</Color>
    <SolidColorBrush x:Key="Brush_Font_2" Color="{StaticResource Color_Font_2}"/>
    <Color x:Key="Color_Highlight_1">#707070</Color>
    <SolidColorBrush x:Key="Brush_Highlight_1" Color="{StaticResource Color_Highlight_1}"/>
    

