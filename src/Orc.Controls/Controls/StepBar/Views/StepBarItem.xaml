<catel:UserControl x:Class="Orc.Controls.StepBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xamlbehaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:catel="http://schemas.catelproject.com"
             xmlns:orccontrols="clr-namespace:Orc.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">

    <xamlbehaviors:Interaction.Triggers>
        <xamlbehaviors:EventTrigger EventName="MouseDown">
            <xamlbehaviors:InvokeCommandAction Command="{Binding Path=DataContext.Command, RelativeSource={RelativeSource AncestorType={x:Type orccontrols:StepBarItem}}}" 
                                               CommandParameter="{Binding}"/>
        </xamlbehaviors:EventTrigger>
    </xamlbehaviors:Interaction.Triggers>

    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type orccontrols:StepBarItem}}}">
        <Grid x:Name="grid" MinWidth="100" MaxWidth="100" Margin="0 0 0 8">
            <Grid Margin="5" Grid.Column="0">
                <Ellipse x:Name="ellipse" Width="26" Height="26" StrokeThickness="0"
                           Fill="{DynamicResource Orc.Brushes.AccentColorBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Image x:Name="icon" Width="26" Height="26" Visibility="Collapsed"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="ellipseText" Text="{Binding DataContext.Number}" HorizontalAlignment="Center" 
                           Foreground="{DynamicResource Orc.Brushes.White}"
                           VerticalAlignment="Center" 
                           FontWeight="Medium" 
                           FontSize="13" 
                           Margin="0,-2,0,0"/>
            </Grid>
            <TextBlock Name="txtTitle" 
                       Text="{Binding DataContext.Title}" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontWeight="Medium"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Grid.Row="1"
                       Foreground="{DynamicResource Orc.Brushes.GrayBrush1}"/>

        </Grid>

        <Canvas HorizontalAlignment="Center" Margin="5">
            <Rectangle x:Name="pathline" Width="48" Height="2" StrokeThickness="0" Grid.Column="1"
                       Fill="{DynamicResource Orc.Brushes.AccentColorBrush40}"
                       Canvas.Left="{Binding ElementName=ellipse, Path=ActualWidth}"
                       Canvas.Top="13"
                       HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="False"/>
        </Canvas>
    </Grid>
</catel:UserControl>
