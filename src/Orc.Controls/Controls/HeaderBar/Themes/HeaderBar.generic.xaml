<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Orc.Controls">

    <Style x:Key="{x:Type controls:HeaderBar}" TargetType="{x:Type controls:HeaderBar}">
        <Setter Property="BorderBrush" Value="{DynamicResource Orc.Brushes.Control.Border}"/>
        <Setter Property="Background" Value="{DynamicResource Orc.Brushes.Control.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Orc.Brushes.Control.Foreground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                            Background="{TemplateBinding Background}"
                            BorderThickness="0" >
                        <TextBlock FontWeight="Medium" 
                                   Foreground="{TemplateBinding Foreground}"
                                   FontSize="14"
                                   Margin="4" 
                                   TextAlignment="Left"
                                   Text="{Binding Path=Header, RelativeSource={RelativeSource TemplatedParent}}">
                        </TextBlock>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
