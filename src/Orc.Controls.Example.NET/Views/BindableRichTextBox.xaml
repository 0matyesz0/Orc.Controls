<catel:UserControl x:Class="Orc.Controls.Examples.Views.BindableRichTextBox"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://schemas.catelproject.com"
				   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls">
    
    <!-- Resources -->
    <UserControl.Resources>
    </UserControl.Resources>

    <!-- Content -->
    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
        <TextBlock Text="BindableRichTextBox" Width="150" VerticalAlignment="Top" />
        <orccontrols:BindableRichTextBox BindableDocument="{Binding FlowDoc}" Width="200" VerticalAlignment="Top"/>
    </StackPanel>
</catel:UserControl>
