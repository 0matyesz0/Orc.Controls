<catel:UserControl x:Class="Orc.Controls.Example.Views.TimePicker"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://schemas.catelproject.com"
				   xmlns:tp="clr-namespace:Orc.Controls;assembly=Orc.Controls">
    
    <!-- Resources -->
    <UserControl.Resources>
    </UserControl.Resources>

    <!-- Content -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <UniformGrid Columns="2" Rows="2">
            <tp:TimePicker Margin="10"
                              BorderBrush="Black"
                              BorderThickness="5"
                              TimeValue="{Binding TimeValue,
                                             Mode=TwoWay}" />
            <tp:TimePicker Margin="10"
                              BorderBrush="Blue"
                              BorderThickness="10"
                              HourThickness="8"
                              HourTickThickness="8"
                              MinuteThickness="4"
                              MinuteTickThickness="4"
                              TimeValue="{Binding TimeValue,
                                             Mode=TwoWay}">
                <tp:TimePicker.HourBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1.0">
                        <GradientStop Offset="0.0" Color="DarkSlateBlue" />
                        <GradientStop Offset="1.0" Color="SkyBlue" />
                    </LinearGradientBrush>
                </tp:TimePicker.HourBrush>
            </tp:TimePicker>
            <tp:TimePicker Margin="10"
                              BorderBrush="Transparent"
                              BorderThickness="5"
                              TimeValue="{Binding TimeValue,
                                             Mode=TwoWay}" />
            <tp:TimePicker Margin="10"
                              Background="Teal"
                              BorderBrush="Black"
                              BorderThickness="5"
                              HourTickBrush="White"
                              MinuteTickBrush="DarkGray"
                              TimeValue="{Binding TimeValue,
                                             Mode=TwoWay}" />
        </UniformGrid>
        <TextBox Grid.Row="1" Text="{Binding TimeValueString}"  IsReadOnly="True" Width="150" HorizontalAlignment="Left"/>
        <Button Grid.Row="2" Content="Set value to null" Command="{Binding SetNull}" HorizontalAlignment="Left" Width="150"/>
        <Button Grid.Row="3" Content="AM/PM" Command="{Binding SetAmPm}" HorizontalAlignment="Left" Width="100"/>
    </Grid>
</catel:UserControl>
