<catel:UserControl x:Class="Orc.Controls.Example.Views.OpenFilePickerView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls">

    <!-- Content -->
    <StackPanel>
        <orccontrols:OpenFilePicker LabelText="OpenFilePicker control" 
                            LabelWidth="150"
                            SelectedFile="{Binding SelectedFile}"
                            BaseDirectory="C:\"
                            Filter="Image files (*.bmp, *.jpg)|*.bmp;*.jpg|All files (*.*)|*.*"  />
    </StackPanel>
</catel:UserControl>