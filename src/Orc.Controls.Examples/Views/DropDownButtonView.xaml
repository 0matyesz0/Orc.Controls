                        </Viewbox>
                    </Grid>
                </orc:DropDownButton.Header>
                <orc:DropDownButton.DropDown>
                    <ContextMenu>
                        <MenuItem Header="Item 1"/>
                    </ContextMenu>
                </orc:DropDownButton.DropDown>
            </orc:DropDownButton>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 0 0 20">
            <TextBlock Text="DropDownButton without default button (ArrowLocation.Bottom)" VerticalAlignment="Center" Width="350" />

            <orc:DropDownButton Header="Action" Height="25" Width="200" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Bottom">
                <orc:DropDownButton.DropDown>
                    <ContextMenu>
                        <MenuItem Header="Item 1 veeeery looooooooooong"/>
                        <MenuItem Header="Item 2"/>
                        <Separator/>
                        <MenuItem Header="Item 2"/>
                    </ContextMenu>
                </orc:DropDownButton.DropDown>
            </orc:DropDownButton>

            <orc:DropDownButton Height="25" Width="40" Margin="10 0 0 0" EnableTransparentBackground="True" ShowDefaultButton="False" ArrowLocation="Bottom">
                <orc:DropDownButton.Header>
                    <Grid>
                        <Viewbox Height="15">
                            <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"
                                  Fill="Black" HorizontalAlignment="Center" Margin="0" SnapsToDevicePixels="True"
                                  Stretch="Fill" UseLayoutRounding="True" VerticalAlignment="Center"/>
                        </Viewbox>
                    </Grid>
                </orc:DropDownButton.Header>
                <orc:DropDownButton.DropDown>
                    <ContextMenu>
                        <MenuItem Header="Item 1"/>
                    </ContextMenu>
                </orc:DropDownButton.DropDown>
            </orc:DropDownButton>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 0 0 20">
            <TextBlock Text="DropDownButton with large buttons" VerticalAlignment="Top" Width="350" />

            <StackPanel VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <orc:DropDownButton Margin="5" Height="75" Width="75" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Left">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.Refresh}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>

                    <orc:DropDownButton Margin="5" Height="75" Width="75" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Top">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.Medkit}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" >

                    <orc:DropDownButton Margin="5" Height="75" Width="75" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Right">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.MailReply}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>

                    <orc:DropDownButton Margin="5" Height="75" Width="75" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Bottom">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.Ambulance}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 0 0 20">
            <TextBlock Text="DropDownButton with large buttons and arrow margin" VerticalAlignment="Top" Width="350" />

            <StackPanel VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal"  >
                    <orc:DropDownButton Margin="5" Height="50" Width="50" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Left" ArrowMargin="5" >
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.Warning}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>

                    <orc:DropDownButton Margin="5" Height="50" Width="50" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Top" ArrowMargin="4">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.Edit}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>
                </StackPanel>

                <StackPanel Orientation="Horizontal" >
                    <orc:DropDownButton Margin="5" Height="50" Width="50" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Right" ArrowMargin="3">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.PowerOff}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
                            <ContextMenu>
                                <MenuItem Header="Item 1 veeeery looooooooooong"/>
                                <MenuItem Header="Item 2"/>
                                <Separator/>
                                <MenuItem Header="Item 2"/>
                            </ContextMenu>
                        </orc:DropDownButton.DropDown>
                    </orc:DropDownButton>

                    <orc:DropDownButton Margin="5" Height="50" Width="50" Command="{Binding DefaultAction}" ShowDefaultButton="False" ArrowLocation="Bottom" ArrowMargin="2">
                        <orc:DropDownButton.Header>
                            <Image Source="{orchestra:FontImage {x:Static ribbon:FontAwesome.PaintBrush}}"/>
                        </orc:DropDownButton.Header>
                        <orc:DropDownButton.DropDown>
