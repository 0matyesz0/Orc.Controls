<catel:UserControl x:Class="Orc.Controls.Examples.Views.DatePicker"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://catel.codeplex.com"
				   xmlns:orc="http://www.wildgums.net.au/orc">
    
    <!-- Resources -->
    <UserControl.Resources>
    </UserControl.Resources>

    <!-- Content -->
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="DatePicker Control" VerticalAlignment="Center" Width="150"/>
            <orc:DatePickerControl Value="{Binding DateValue}" Width="120" Margin="5" Format="yyyy/MM/dd" HorizontalAlignment="Left" IsReadOnly="{Binding IsChecked, ElementName=_readOnlyCheckbox}" />
            <CheckBox x:Name="_readOnlyCheckbox" Content="Read only" IsChecked="False" Margin="15 9 8 8"/>
        </StackPanel>
    </StackPanel>
</catel:UserControl>
