<catel:UserControl x:Class="Orc.Controls.Examples.Views.DateTimePicker"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				   xmlns:catel="http://catel.codeplex.com"
				   xmlns:orc="http://www.wildgums.net.au/orc">
    
    <!-- Resources -->
    <UserControl.Resources>
    </UserControl.Resources>

    <!-- Content -->
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="DateTimePicker Control" VerticalAlignment="Center" Width="150"/>
            <orc:DateTimePickerControl Value="{Binding DateTimeValue}" Width="200"
                                       Margin="5" HorizontalAlignment="Left" AccentColorBrush="{Binding AccentColorBrush}"
                                       ShowOptionsButton="True" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Selected DateTime" VerticalAlignment="Center" Width="150"/>
            <TextBox Text="{Binding DateTimeValue}" Width="200" Margin="5" 
                 HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</catel:UserControl>
