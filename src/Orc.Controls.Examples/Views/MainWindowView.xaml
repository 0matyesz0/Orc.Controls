              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:catel="http://catel.codeplex.com"
              xmlns:views="clr-namespace:Orc.Controls.Examples.Views"
              Height="650" Width="525">

    <TabControl Padding="10">
        <TabItem Header="TimeSpan">
            <views:TimeSpan/>
        </TabItem>
        <TabItem Header="DateTimePicker">
            <views:DateTimePicker/>
        </TabItem>
        <TabItem Header="FilterBox">
            <views:FilterBox/>
        </TabItem>
        <TabItem Header="BindableRichTextBox">
            <views:BindableRichTextBox/>
        </TabItem>
        <TabItem Header="LogViewer">
            <views:LogViewer/>
        </TabItem>
    </TabControl>
        

        <controls:DropDownButton Grid.Column="1" Grid.Row="11" Header="DropDownButton">
            <controls:DropDownButton.DropDown>
                <ContextMenu>
                    <MenuItem Header="Item 1"/>
                    <MenuItem Header="Item 2"/>
                    <Separator/>
                    <MenuItem Header="Item 2"/>
                </ContextMenu>
            </controls:DropDownButton.DropDown>
        </controls:DropDownButton>
