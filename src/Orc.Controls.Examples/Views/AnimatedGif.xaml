<catel:UserControl x:Class="Orc.Controls.Examples.Views.AnimatedGif"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:orc="http://www.wildgums.net.au/orc">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="AnimatedGif" VerticalAlignment="Center" Width="150"/>
            <orc:AnimatedGif x:Name="LoadingGif" Width="16" Height="16" HorizontalAlignment="Center"
                             GifSource="/Orc.Controls;component/Resources/Images/Loading.gif" Margin="5" />
        </StackPanel>
    </StackPanel>
    
</catel:UserControl>
